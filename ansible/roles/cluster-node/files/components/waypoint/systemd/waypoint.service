[Unit]

Description=Waypoint
Requires=vlipco.target

[Service]

Restart=always
ExecStartPre=/usr/local/bin/docker-rm "%p"
ExecStop=/usr/local/bin/docker-stop "%p"

TimeoutStopSec=5

ExecStart=/usr/local/bin/docker run \
	--name waypoint \
	-p 5000:5000 -p 5100:5100 \
	vlipco/waypoint /usr/bin/sleep infinity

[Install]

WantedBy=vlipco.target

docker run --rm -ti -p 5000:5000 -p 5100:5100 --dns 8.8.8.8 --dns 8.8.4.4 vlipco/waypoint /bin/bash
