#!/bin/bash
set -eo pipefail

githost_port="9999"
ssh_key="/etc/ssh/ssh_host_dsa_key"
cache_dir="/srv/data/repos"
receiver="/srv/bin/build-slug"

# no auth here, that's the hosts responsability
fake_auth_checker="/bin/false"

./gitreceived -k="$ssh_key" -r="$cache_dir" -p="$githost_port" -n=false \
	$ssh_key $fake_auth_checker	$receiver