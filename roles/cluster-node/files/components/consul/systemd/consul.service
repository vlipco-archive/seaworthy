[Unit]

Description=Consul Server
Requires=vlipco.target

[Service]

Restart=always
TimeoutStopSec=15
RestartSec=5

ExecReload=/bin/kill -HUP $MAINPID

ExecStart=/usr/local/bin/consul agent -config-dir /cluster/etc/consul

ExecStartPost=/bin/bash -c "echo 'nameserver 127.0.0.1' > /etc/resolv.conf"

ExecStopPost=/bin/bash -c "cat /etc/resolv.conf.orig > /etc/resolv.conf"

[Install]
WantedBy=vlipco.target