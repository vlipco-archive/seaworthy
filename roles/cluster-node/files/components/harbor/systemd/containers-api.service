[Unit]

Description=Exposes container-api scripts for instrospection
Requires=docker.service

[Service]

Restart=always
Environment="SCRIPTS=/cluster/components/harbor/misc/containers-api"
ExecStartPre=/bin/bash -c "for scr in $(ls $SCRIPTS -1); do chmod +x $src; done"

ExecStart=/usr/local/bin/scripts2http -address 172.172.17.42.1:80 -scripts-dir $SCRIPTS

[Install]

WantedBy=vlipco.target
